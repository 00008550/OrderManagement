@model OrderManagement.Models.Order

@{
    ViewData["Title"] = "Details";
}

<div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between border-b border-gray-200 py-2 mt-2 mb-4">
        <div class="flex-1 min-w-0">
            <h4 class="text-base text-gray-500">
                Order
            </h4>
            <h2 class="text-2xl font-bold text-gray-800">Details</h2>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManagerOrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManagerOrderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerOrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerOrderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SellerOrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SellerOrderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemOrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemOrderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfOrder)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemQuality)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemQuality)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Delivered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivered)
        </dd>
    </dl>

    <hr class="mt-5" />
    <div class="pt-5">
        <div class="flex justify-end">
            <a asp-action="Index" type="button" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Back to list
            </a>
            <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                @Html.ActionLink("Edit", "Edit", new { id = Model.OrderId })
            </button>
        </div>
    </div>
</div>
